@* Located at Views/Announcements/_UserAnnouncementCreate.cshtml *@

<form id="userAnnouncementCreateForm">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" placeholder="Enter title">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" rows="3" placeholder="Announcement details"></textarea>
    </div>
    <div class="form-group">
        <label for="tournament">Tournament</label>
        <select class="form-control" id="tournament">
            <!-- Tournament options will be dynamically populated -->
        </select>
    </div>
    <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" id="date">
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="isDraft">
        <label class="form-check-label" for="isDraft">Save as Draft</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
