<form id="createAnnouncementForm" class="ui form" style="padding: 20px; background-color: #93a86d; border-radius: 10px;">
    <div class="ui field">
        <label>Title</label>
        <div class="ui left icon input">
            <input type="text" id="title" placeholder="Announcement Title" required>
            <i class="announcement icon"></i>
        </div>
        <div class="ui red text" id="titleError"></div>
    </div>
    <div class="ui field">
        <label>Description</label>
        <div class="ui left icon input">
            <textarea id="description" placeholder="Detailed Description" required></textarea>
            <i class="align left icon"></i>
        </div>
        <div class="ui red text" id="descriptionError"></div>
    </div>
    <div class="ui field">
        <label>Author</label>
        <div class="ui left icon input">
            <input type="text" id="author" placeholder="Your Name" required>
            <i class="user icon"></i>
        </div>
        <div class="ui red text" id="authorError"></div>
    </div>
        <div class="ui field">
        <label>Admin Key</label>
        <div class="ui left icon input">
            <input type="password" id="adminKey" placeholder="Admin Verification Key" required>
            <i class="lock icon"></i>
        </div>
    <button class="ui fluid large primary submit button" type="submit">Create Announcement</button>
</form>


