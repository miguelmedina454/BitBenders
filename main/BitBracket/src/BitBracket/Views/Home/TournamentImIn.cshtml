@model IEnumerable<BitBracket.Models.Tournament>

@{
    ViewData["Title"] = "Tournaments I'm In";
}

<h2>Tournaments I'm In</h2>

<div id="tournaments-container"></div>

@if (Model == null || !Model.Any())
{
    <p id="empty-placeholder" style="display:none;">You are not participating in any tournaments.</p>
}
<script src="~/js/TournamentImIn.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const userId = @ViewBag.UserId; // Ensure you get the correct user ID
        fetchTournaments(userId);
    });
</script>
