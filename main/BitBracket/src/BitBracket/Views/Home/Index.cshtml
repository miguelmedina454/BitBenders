@* Home/Index.cshtml *@

@model BitBracket.Models.Announcement

@{
    ViewData["Title"] = "Home Page";
}

@{
    var alert = TempData["Alert"] as string;
    if (!string.IsNullOrEmpty(alert))
    {
        <div class="alert alert-warning">
            @alert
        </div>
    }
}
<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<div class="section-gap"></div>
<div class="section-gap"></div>
<body class="announcement-background"></body>
    <div class="ui container center aligned">
        <h1 class="title-styling">Welcome to BitBracket
        <button id="myBtn">i</button>

        </h1>
    <div id="myModal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <p>Welcome to our home page! From here, you can see the latest admin announcement, see some information</p>
            <p>about our softwares purpose, and get oriented before seeing what we have to offer! </p>
          
        </div>
    </div>
        <p class="text-styling">Your ultimate platform for organizing and participating in tournaments.</p>
        
        <div class="ui center aligned segment">
            <a href="@Url.Action("CreateBracket", "Bracket")" class="ui animated button" tabindex="0">
                <div class="visible content">Got an idea for a tournament?</div>
                <div class="hidden content">Create a Basic Bracket.
                </div>
            </a>
            <a href="@Url.Action("Announcement", "Home")" class="ui animated button" tabindex="0">
                <div class="visible content">What have you missed?</div>
                <div class="hidden content">Check Announcements Page</div>
            </a>
            <a href="@Url.Action("Privacy", "Home")" class="ui animated button" tabindex="0">
                <div class="visible content">What is BitBracket?</div>
                <div class="hidden content">Check About Page</div>
            </a>

        </div>

<div class="section-gap"></div>
        <div class="ui hidden divider"></div>

        <h2 class="ui header">Latest Announcement</h2>
        @if (Model != null)
        {
            <div class="ui card centered">
                <div class="content">
                    <div class="header">@Model.Title</div>
                    <div class="description">
                        @Model.Description
                    </div>
                    <div class="meta">@Model.CreationDate.ToString("MMMM dd, yyyy")</div>
                </div>
            </div>
        }
        else
        {
            <div>No announcements to display.</div>
        }

        <div class="section-gap"></div>
        <div class="section-gap"></div>
        <div class="section-gap"></div>
        <div class="section-gap"></div>
        <div class="ui hidden divider"></div>
        <div class="ui hidden divider"></div>
        <div class="ui hidden divider"></div>
        <div class="ui hidden divider"></div>

        <h2 class="text-styling">Why Choose BitBracket?</h2>
        <div class="section-gap"></div>
        <div class="ui three column very relaxed grid">
            <div class="column">
                <div class="ui icon header icon-color">
                    <i class="world icon icon-color"></i> 
                    Global Community
                </div>
                <p class="medium-text">Connect with players from all over the world.</p>
            </div>
            <div class="column">
                <div class="ui icon header icon-color">
                    <i class="trophy icon icon-color"></i> 
                    Competitive Tournaments
                </div>
                <p class="medium-text">Compete in high-stakes tournaments across various games.</p>
            </div>
            <div class="column">
                <div class="ui icon header icon-color">
                    <i class="users icon icon-color"></i> 
                    Friendly Environment
                </div>
                <p class="medium-text">Enjoy a welcoming community regardless of your skill level.</p>
            </div>
        </div>
    </div>

<script src="~/js/modalswitcher.js"></script>
