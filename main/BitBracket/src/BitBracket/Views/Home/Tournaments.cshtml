@using BitBracket.ViewModels
@model TournamentViewModel
<!DOCTYPE html>
<html lang="en">
<body class="announcement-background">
    <div class="ui container">
        <h1 class="title-styling">Tournament: @Model.Name 
            <button id="myBtn">i</button>
        </h1>
        <div id="myModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <p>Welcome to the tournament page! Here you can view the details of a tournament and send a request to participate.</p>
            </div>
        </div>

    </div>
    <div class="ui very padded segment">
        <div class="ui divided items">
            <div class="item">
                <div class="image">
                    <img id="profileImage" src="" alt="Broadcast not set" class="ui medium rounded image">
                   
                    <a class="ui teal ribbon label clickable">Profile Picture</a>
                </div>
                <div class="content">
                    <a class="header">Owner</a>
                    <div class="meta">
                        <span>@Model.Owner</span>
                    </div>
                    <div class="description">
                        <p><strong>Tag:</strong> <div id="tagId" class="ui label">Tag?</div></p>
                        <p><strong>Bio:</strong> <div id="bioId" class="ui small fluid input">Bio?</div></p>
                    </div>
                    <div class="extra">
                        <button id="saveTagButtonId" class="ui small primary button">Register</button>
                        <button id="saveBioButtonId" class="ui small secondary button">Open chat</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="ui very padded segment">
        <div class="ui divided items">
            <div class="item">
                
                <div class="content">
                    <a class="header"> Owner:  @Model.Owner</a>

                    <div class="meta">
                        <p><strong>Location:</strong> <div id="bioId" class="ui small fluid input">@Model.Location</div></p>
                        <p><strong>Status:</strong> <div id="bioId" class="ui small fluid input">@Model.Status</div></p>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="container">
            <div class="row p-1">
                <div class="col-1">User</div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="col-5">
                    <input type="text" id="userInput" value="@Model.CurrentUserName" readonly />
                </div>

            }
            else
            {
                <div class="col-5" id="userInput"><input type="text" id="userInput" disabled />Sign in to message</div>
            }

            </div>
            <div class="row p-1">
                <div class="col-1">Message</div>
                <div class="col-5"><input type="text" class="w-100" id="messageInput" /></div>
            </div>
            <div class="row p-1">
                <div class="col-6 text-end">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <input type="button" id="sendButton" value="Send Message" />
                    }
                    else
                    {
                        <input type="button" id="sendButton" value="Send Message" disabled />
                    }
                </div>

            </div>
        </div>
        <div class="row p-1">
            <div class="col-6">
                <p>Message Board</p>
                <hr />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-6">
                <ul id="messagesList"></ul>
            </div>
        </div>
    <script src="~/js/signlar/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
    <script src="~/js/modalswitcher.js"></script>
</body>